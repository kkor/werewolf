{
  "name": "werewolf",
  "version": "0.0.1",
  "description": "Werewolf game",
  "main": "public/js/app.jsx",
  "dependencies": {
    "body-parser": "^1.5.2",
    "errorhandler": "^1.1.1",
    "express": "~4.11.2",
    "flux": "^2.0.0",
    "ion-public": "~3.0.7",
    "less": "^2.6.1",
    "method-override": "^2.1.2",
    "multer": "^0.1.3",
    "object-assign": "^1.0.0",
    "path": "^0.12.7",
    "react": "^0.12.0",
    "socket.io": ">= 1.3.4",
    "underscore": "^1.7.0"
  },
  "devDependencies": {
    "browserify": "~6.2.0",
    "browserify-shim": "^3.8.12",
    "catw": "~0.2.0",
    "envify": "~3.0.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-browserify": "^0.5.1",
    "gulp-jshint": "^2.0.0",
    "gulp-less": "^3.1.0",
    "gulp-minify-css": "^1.2.4",
    "gulp-rename": "^1.2.2",
    "gulp-uglify": "^1.5.3",
    "react": "^0.12.0",
    "react-router": "^0.12.0",
    "reactify": "^0.15",
    "watchify": "~2.1.0"
  },
  "scripts": {
    "watch-css": "catw -c 'lessc -' 'src/style/*.less' -o public/bundle.css -v",
    "watch-js": "watchify src/js/*.js -o public/bundle.js -dv",
    "watch": "npm run watch-css & npm run watch-js",
    "build-css": "catw -c 'lessc -' 'src/style/*.less' > public/bundle.css",
    "build-js": "browserify src/js/*.js > public/bundle.js",
    "build": "npm run build-css && npm run build-js",
    "start": "node src/server/server.js"
  },
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  }
}
